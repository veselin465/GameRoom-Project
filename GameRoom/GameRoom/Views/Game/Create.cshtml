
@model GameRoom.ViewModels.CreateGameViewModel

@{
    ViewData["Title"] = "Create";
}

<system.webserver> <aspNetCore requestTimeout="00:22:00"></aspNetCore> </system.webserver>

<h2>Create Game</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" required/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RequiredAge" class="control-label"></label>
                <input asp-for="RequiredAge" class="form-control" required min="0"/>
                <span asp-validation-for="RequiredAge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" required/>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
