
@{
    ViewData["Title"] = "View";
}
@model GameRoom.ViewModels.IndexScoreboardViewModel

<style>
    .scoreboard {
        padding: 5px;
        overflow-y: auto;
        height: 400px;
        border: solid;
        border-top-width: 1.5px;
        width: 100%;
        text-align: center;
        background-color: #d3ff68;
    }

    .scoreboardHeader {
        padding: 5px;
        text-align: center;
        border: solid;
        width: 100%;
        border-bottom-width: 1.5px;
        font-size: 30px;
        background-color: #d3ff68;
    }

    .playerPerformance {
        font: 800 30px 'Open Sans','Sans-Serif';
        word-spacing: 4px;
    }
    .skeletScoreboardText {
        font-size: 17px;
        margin-right: 7px;
        margin-left: 7px;
    }
    .playerGamePair{
        word-break:break-word;
    }
</style>
<br />
<div class="scoreboardHeader">Scoreboard</div>
<div class="scoreboard">
    @foreach (var sb in Model.Scoreboard)
    {
        <p class="playerGamePair">
            <span class="skeletScoreboardText">USER </span>
            <a asp-route-id="@sb.PlayerId" asp-area="" asp-action="Detail" asp-controller="Player"  class="playerPerformance" style="color:darkgreen">@sb.PlayerUserName</a>
            <span class="skeletScoreboardText"> PLAYED ON GAME </span>
            <a asp-route-id="@sb.GameId" asp-area="" asp-action="Detail" asp-controller="Game" class="playerPerformance">@sb.GameName</a>
            <span class="skeletScoreboardText"> SCORING </span>
            <b class="playerPerformance">@sb.Score</b>
            <span class="skeletScoreboardText"> POINTS </span>
        </p>
    }

</div>



